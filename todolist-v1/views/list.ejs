<!DOCTYPE html>
<html lang="en">
	<%- include('head') -%>
	<body>
		<div class="box" id="heading">
			<h1><%= listTitle %></h1>
		</div>

		<div class="box">
			<% for (let i = 0; i < items.length; i++) { %>
			<div class="item">
				<input type="checkbox" />
				<p><%= items[i] %></p>
			</div>
			<% } %>

			<form class="item" method="POST">
				<input
					type="text"
					name="newItem"
					placeholder="New Item"
					autocomplete="off"
				/>
				<button type="submit">+</button>
			</form>
		</div>
	</body>
	<%- include('footer') -%>
</html>
