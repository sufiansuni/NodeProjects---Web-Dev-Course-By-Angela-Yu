<!DOCTYPE html>
<html lang="en" dir="ltr">
	<%- include('partials/head'); -%>
	<body>
		<div class="container">
			<!-- Content -->
			<h1>Home</h1>
			<p><%= startingContent %></p>
			<% posts.forEach(function(post) { %>
			<div>
				<h1><%= post.title %></h1>
				<p>
					<%= post.content.substring(0, 99) + "..." %>
					<a href="posts/<%= post.title %>">Read More</a>
				</p>
			</div>
			<% }) %>
		</div>
	</body>
	<%- include('partials/footer'); -%>
</html>
